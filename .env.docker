# =====================================================
# Docker環境用 環境変数
# =====================================================
# このファイルをコピーして使用:
#   cp .env.docker apps/api/.env
# =====================================================

# Application
NODE_ENV=development
PORT=3000
ADMIN_URL=http://localhost:5173
WIDGET_URL=http://localhost:5174

# Database (Docker PostgreSQL)
DATABASE_URL=postgresql://crossbot:crossbot_dev@localhost:5432/crossbot

# Redis (optional for scaling)
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRATION=24h

# AWS (optional for image upload)
AWS_REGION=ap-northeast-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=crossbot-uploads

# Slack Notification (optional)
SLACK_WEBHOOK_URL=

# Email (SES - optional)
SES_FROM_ADDRESS=support@cross-learning.net

# LMS Integration (optional)
LMS_BASE_URL=https://max.cross-learning.net
LMS_API_KEY=

# Feature Flags
ENABLE_SLACK_NOTIFICATION=false
ENABLE_EMAIL_NOTIFICATION=false
ENABLE_IMAGE_UPLOAD=true
ENABLE_AI_CHAT=true

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# OpenAI (AI Chat)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
